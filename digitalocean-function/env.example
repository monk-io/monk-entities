# DigitalOcean API Token (required)
# Get this from: https://cloud.digitalocean.com/account/api/tokens
DO_API_TOKEN=your_digitalocean_api_token_here

# Function Configuration
FUNCTION_NAME=hello-world
NAMESPACE_NAME=default
RUNTIME=python:3.9
MEMORY=128
TIMEOUT=30

# Environment variables for your function (JSON format)
# ENVIRONMENT_VARS={"NODE_ENV":"production","API_KEY":"your_api_key"}

# Deployment behavior
DEPLOY_ONLY=false

# Delete function instead of deploying (set to "true" to delete)
DELETE_FUNCTION=false

# Optional: Script to run after deletion
POST_DELETE=echo "Function deleted successfully"
